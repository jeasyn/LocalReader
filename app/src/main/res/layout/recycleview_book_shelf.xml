<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_book"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/book_shelf_cover_bg_1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="12sp"
            tools:text="name" />

        <ImageView
            android:id="@+id/iv_book_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/tv_book"
            android:layout_alignBottom="@+id/tv_book"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:src="@drawable/book_item_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="name"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_show_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:text="@string/main_no_read"
        android:textSize="10sp" />

</LinearLayout>