<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#fff"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="亮度" />

            <SeekBar
                android:id="@+id/sb_brightness"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="4"
                android:max="100" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="字号" />

        <TextView
            android:id="@+id/tv_subtract"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/read_settings_font_change_style"
            android:gravity="center"
            android:text="A -" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="60"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/read_settings_font_change_style"
            android:gravity="center"
            android:text="A +" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主题" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/iv_bg_default"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/read_bg_default"
            app:backgroundTint="@color/read_bg_default" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/iv_bg_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/read_bg_1"
            app:backgroundTint="@color/read_bg_1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/iv_bg_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/read_bg_2"
            app:backgroundTint="@color/read_bg_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/iv_bg_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/read_bg_3"
            app:backgroundTint="@color/read_bg_3" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/iv_bg_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/read_bg_4"
            app:backgroundTint="@color/read_bg_4" />
    </LinearLayout>

</LinearLayout>