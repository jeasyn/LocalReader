<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_main_bottom_delete"
        style="@style/main_popup_bottom_linear_layout_style">

        <ImageView
            android:id="@+id/iv_main_bottom_delete"
            style="@style/main_popup_bottom_image_view_style"
            app:srcCompat="@drawable/main_icon_bottom_delete" />

        <TextView
            android:id="@+id/tv_main_bottom_delete"
            style="@style/main_popup_bottom_text_view_style"
            android:text="@string/main_delete" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_bottom_cancel"
        style="@style/main_popup_bottom_linear_layout_style">

        <ImageView
            style="@style/main_popup_bottom_image_view_style"
            app:srcCompat="@drawable/main_icon_bottom_cancel" />

        <TextView
            style="@style/main_popup_bottom_text_view_style"
            android:text="@string/main_cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_bottom_select_all"
        style="@style/main_popup_bottom_linear_layout_style">

        <ImageView
            android:id="@+id/iv_main_bottom_select_all"
            style="@style/main_popup_bottom_image_view_style"
            app:srcCompat="@drawable/main_icon_bottom_select_all_cancel" />

        <TextView
            android:id="@+id/tv_main_bottom_select_all"
            style="@style/main_popup_bottom_text_view_style"
            android:text="@string/main_select_all" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_bottom_detail"
        style="@style/main_popup_bottom_linear_layout_style">

        <ImageView
            android:id="@+id/iv_main_bottom_detail"
            style="@style/main_popup_bottom_image_view_style"
            app:srcCompat="@drawable/main_icon_bottom_detail" />

        <TextView
            android:id="@+id/tv_main_bottom_detail"
            style="@style/main_popup_bottom_text_view_style"
            android:text="@string/main_detail" />
    </LinearLayout>

</LinearLayout>